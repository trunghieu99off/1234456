<div class="container">

	<!-- Trigger the modal with a button -->
	<!-- Modal -->
	<div class="modal fade" id="myModal" role="dialog" >
		<div class="modal-dialog" >

			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">Add/Update Employee</h4>
				</div>
				<div class="modal-body">
					<form role="form" id="frmSaveData">
						<div class="form-group">
							<label for="txtName">Name:</label>
							<input type="text" class="form-control" name="txtName" id="txtName">
							<input type="hidden" id="hidID" value="0" />
						</div>
						<div class="form-group">
							<label for="txtemail">email:</label>
							<input type="text" class="form-control" name="txtemail" id="txtemail">
						</div>
						<div class="checkbox">
							<label><input type="checkbox" id="ckStatus">Active</label>
						</div>
						<div class="form-group">
							<label for="txtemail">email:</label>
							<input type="text" class="form-control" name="txtAddress" id="txtAddress">
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-primary" id="btnSave">Save</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

				</div>
			</div>

		</div>
	</div>

</div>

