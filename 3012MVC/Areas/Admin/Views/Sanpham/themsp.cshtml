@model _3012MVC.Models.SPHAM

@{
    ViewBag.Title = "themsp";
}


@using (Html.BeginForm("Addsanpham","Sanpham",FormMethod.Post,new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       <h5>Thêm sản phẩm</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

        <div class="form-group">
           Tên sản phẩm
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Loại sản phẩm
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.LOAISP ,(SelectList)ViewBag.LOAISP, String.Empty,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LOAISP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
         Hãng sản xuất
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.HANGSX ,(SelectList)ViewBag.HANGSX,String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HANGSX, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          Giá gốc
            <div class="col-md-10">
                @Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          Số lượng
            <div class="col-md-10">
                @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Mô tả
            <div class="col-md-10">
                @Html.EditorFor(model => model.MOTA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MOTA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          Sản phẩm mới
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ISNEW)
                    @Html.ValidationMessageFor(model => model.ISNEW, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
          Ảnh đại diện
				<div class="col-md-3">
					<img id="anhnen" src="@Url.Content("~/template/")assets/images/blank.gif" alt="your image" />
					<input type="file" name="an" accept=".jpg" class="form-control" onchange="readURL(this, '#anhnen');" />
				</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-info btn-lg" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
