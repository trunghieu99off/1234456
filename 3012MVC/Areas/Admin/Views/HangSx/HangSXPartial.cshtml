@using _3012MVC.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<HSANXUAT>


<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
	<thead>
		<tr>
			<th>
				<input type="checkbox" onclick="toggle(this)" />
			</th>
			<th>@Html.DisplayNameFor(model => model.First().TENHANG)</th>
		
			<th>@Html.DisplayNameFor(model => model.First().QUOCGIA)</th>
			<th>#</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<input type="checkbox" name="lstdel" value="@item.TENHANG" />
				</td>
				<td class="center">@item.TENHANG</td>
			
				<td class="center">@item.QUOCGIA</td>
				<td class="center">
					<a class="btn btn-info" href="#">
						<i class="glyphicon glyphicon-edit icon-white"></i>		
					</a>
					<a class="btn btn-danger" href='javascript:XoaItem("@Url.Action("DeleteHangSX", "HangSX")","")'>
						<i class="glyphicon glyphicon-trash icon-white"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="pagination-holder">
	<div class="row">
		<div class="col-xs-12 col-sm-6 text-left">
			<div id="nav_grid">
				@Html.PagedListPager(Model, page => Url.Action("TimHangSX", "HangSX", new { key = @ViewBag.key, page = page }))
			</div>
		</div>
	
	</div><!-- /.row -->
</div><!-- /.pagination-holder -->